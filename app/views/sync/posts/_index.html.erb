<tr>
  <td><%= post.title %></td>
  <td><%= post.content %></td>
  <td><%= link_to 'Show', post_path(post), data: {push: true, target: '#right-container'} %></td>
  <td><%= link_to 'Edit', edit_post_path(post), data: {push: true, target: '#right-container'} %></td>
  <td><%= link_to 'Destroy', post, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
</tr>